.text
	width: 85%;
	height: 80px;
	margin: 10px auto;
	background-color: #F6F6F6;
	overflow: hidden;
	.word
		display: inline-block;
		margin: 0px 5px;
		font-size: 28px;
		font-family: Ubuntu;
		font-weight: 100;
		padding: 2.5px;
	.active 
		color: #0052BC;
		background-color: #E4E4E4;
		border-radius: 3px;

.type 
	font-family: Roboto;
	font-size: 32px;
	font-weight: 300;
	padding: 10px;

.score, .incorrect 
	font-size: 32px;
	font-family: Roboto;
	padding: 10px;
	
.countdown
	font-size: 37px;
	font-family: Roboto;
	font-weight: 300;
	background-color: #EFEFEF;
	width: 50px;
	border-radius: 5px;
	border: 1px solid #D4D4D4;
	padding: 10px;
	margin-left: 5px;
	height: 50px;
	text-align: center;
